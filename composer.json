{
    "name"             : "rudra/router",
    "description"      : "Rudra framework",
    "type"             : "library",
    "keywords"         : [
        "rudra",
        "router",
        "routing",
        "rest-router",
        "rest",
        "restful"
    ],
    "license"          : "MIT",
    "authors"          : [
        {
            "name"    : "Jagepard",
            "email"   : "jagepard@yandex.ru",
            "homepage": "https://jagepard.ru",
            "role"    : "Developer"
        }
    ],
    "support"          : {
        "email": "jagepard@yandex.ru",
        "skype": "jagepard.ru"
    },
    "require"          : {
        "php"             : ">=8.0",
        "rudra/annotation": "self.version",
        "rudra/container" : "self.version",
        "rudra/exception" : "self.version"
    },
    "autoload"         : {
        "psr-4": {
            "Rudra\\Router\\": "src/"
        }
    },
    "autoload-dev"     : {
        "psr-4": {
            "Rudra\\Router\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "config"           : {
        "optimize-autoloader": true,
        "prefer-stable"      : true
    }
}
